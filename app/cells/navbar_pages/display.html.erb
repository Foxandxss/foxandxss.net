<% @pagetypes.each do |pt| %>
    <% if pt.pages.size.eql?(1)%>
        <% pt.pages.each do |page| %>
            <li><%= link_to page.title, page %></li>
        <% end %>
    <% else %>
        <% unless pt.pages.empty? %>
            <li class="dropdown">
              <a href="#"
                 class="dropdown-toggle"
                 data-toggle="dropdown">
                <%= pt.name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% pt.pages.each do |page| %>
                    <li><%= link_to page.title, page %></li>
                <% end %>
              </ul>
            </li>
        <% end %>
    <% end %>
<% end %>