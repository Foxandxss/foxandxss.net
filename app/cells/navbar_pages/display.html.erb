<% @pagetypes.each do |pt| %>
    <% unless pt.pages.empty? %>
        <li class="dropdown">
          <a href="#"
             class="dropdown-toggle"
             data-toggle="dropdown">
            <%= pt.name %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% pt.pages.each do |page| %>
                <li><a href="#"><%= page.title %></a></li>
            <% end %>
          </ul>
        </li>
    <% end %>
<% end %>